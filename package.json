{
  "name": "everlon",
  "version": "0.0.0",
  "description": "An infinite, unstoppable World",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "mud": "node node_modules/@latticexyz/cli/dist/mud.js",
    "build": "yarn workspaces run build",
    "dev": "concurrently -n contracts,client -c cyan,magenta \"cd packages/contracts && yarn run dev\" \"cd packages/client && yarn run dev\"",
    "dev:client": "yarn workspace client run dev",
    "dev:contracts": "yarn workspace contracts run dev",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "initialize": "yarn workspaces run initialize",
    "mud:up": "yarn workspaces foreach -t run yarn mud set-version -v canary && yarn install",
    "prepare": "(forge --version || yarn foundry:up)",
    "test": "yarn workspaces run test",
    "clean": "yarn rm-node-modules",
    "rm-node-modules": "find . -type d -name 'node_modules' -exec rm -rf {} +"
  },
  "devDependencies": {
    "@latticexyz/cli": "link:../mud/packages/cli",
    "@solidstate/contracts": "^0.0.57",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "concurrently": "^8.0.1",
    "eslint": "8.29.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "18.x",
    "yarn": ">=3.6.0"
  },
  "packageManager": "yarn@3.6.1"
}
