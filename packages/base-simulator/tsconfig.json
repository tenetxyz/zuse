// Visit https://aka.ms/tsconfig.json for all config options
{
  "compilerOptions": {
    "target": "es2021",
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
