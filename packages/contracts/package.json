{
  "name": "contracts",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "mud": "node ../../../mud/packages/cli/dist/mud.js",
    "build": "forge clean && forge build --force",
    "deploy": "yarn initialize && yarn mud deploy",
    "deploy:hackathon": "yarn initialize && mud deploy --profile=hackathon-testnet",
    "deploy:testnet": "yarn initialize && mud deploy --profile=lattice-testnet",
    "dev": "yarn mud dev-contracts --tsgenOutput ../client/src/mud",
    "initialize": "yarn tablegen && yarn worldgen && yarn build && yarn worldtypes && yarn tsgen",
    "lint": "yarn prettier && yarn solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "tablegen": "yarn mud tablegen",
    "test": "yarn mud test",
    "test-verbose": "yarn initialize && mud test --forgeOptions='-vvv'",
    "tsgen": "yarn mud tsgen --configPath mud.config.ts --out ../client/src/mud",
    "worldgen": "yarn mud worldgen",
    "worldtypes": "rimraf types && typechain --target=ethers-v5 out/IWorld.sol/IWorld.json"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@latticexyz/cli": "link:../../../mud/packages/cli",
    "@latticexyz/config": "link:../../../mud/packages/config",
    "@latticexyz/noise": "link:../../../mud/packages/noise",
    "@latticexyz/schema-type": "link:../../../mud/packages/schema-type",
    "@latticexyz/solecs": "link:../../../mud/packages/solecs",
    "@latticexyz/std-contracts": "link:../../../mud/packages/std-contracts",
    "@latticexyz/store": "link:../../../mud/packages/store",
    "@latticexyz/world": "link:../../../mud/packages/world",
    "@openzeppelin/contracts": "^4.9.1",
    "@solidstate/contracts": "^0.0.57",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.15.11",
    "abdk-libraries-solidity": "^3.2.0",
    "ds-test": "https://github.com/dapphub/ds-test.git#c9ce3f25bde29fc5eb9901842bf02850dfd2d084",
    "ethers": "^5.7.2",
    "forge-std": "https://github.com/foundry-rs/forge-std",
    "memmove": "https://github.com/dk1a/memmove.git#ffd71cd77b1708574ef46a667b23ca3a5cc9fa27",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.0-alpha.1.197+5e6cc0f5",
    "solhint-plugin-mud": "2.0.0-alpha.1.197+5e6cc0f5",
    "typechain": "^8.1.1"
  }
}
