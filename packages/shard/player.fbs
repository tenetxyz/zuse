namespace Shard;

struct Coord3 {
  x: float;
  y: float;
  z: float;
}

struct Quaternion {
  x: float;
  y: float;
  z: float;
  w: float;
}

table Player {
  id: [ubyte]; // byte32
  position: Coord3;
  direction: Quaternion;
  health: uint;
  attack_cooldown_ticks_left: uint;
}

table Attack {
  attacker_id: [ubyte];
  victim_id: [ubyte];
  damage: uint;
}

rpc_service PlayerService {
  UpdatePlayer(Player): Player;
  AttackPlayer(Attack): Player;
}
